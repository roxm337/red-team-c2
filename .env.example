# C2 Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Public IP Configuration for External Access
# Replace with your actual public IP address
PUBLIC_IP=your_public_ip_here
# Or use a domain name instead
PUBLIC_DOMAIN=your_domain_here
# Set to true if using HTTPS
USE_HTTPS=false

# File Directories
UPLOAD_DIR=uploads
DOWNLOAD_DIR=downloads

# Enhanced Features Settings
MAX_COMMAND_QUEUE_SIZE=100
MAX_FILE_SIZE=50000000
SESSION_TIMEOUT=3600
LOG_RETENTION_DAYS=30

# Security Settings (Optional)
# API_KEY=your_api_key_here
# ALLOWED_ORIGINS=*
